.container
  .row
    .page-header.clearfix
      h1=title
      .col-md-4
        small dead-hard fans
      .col-md-8
        form(method='GET',action='/results')
          .input-group.col-sm-4.pull-right
            input.form-control(type='text,name='q')
            span.input-group-btn
              button.btn.btn-default(type='submit') 搜索

.navbar.navbar-default.navbar-fixed-bottom
  .container
    .navbar-header
      a.navbar-brand(href="/") movie fans
    if user
      p.navbar-text.navbar-right
        span welcome #{user.name}
        span &nbsp;|&nbsp;
        a.navbar-link(href="/logout") logout
    else
      p.navbar-text.navbar-right
        a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") signup
        span &nbsp;|&nbsp;
        a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") login
#signupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST",action="/user/signup")
        .modal-header signup
        .modal-body
          .form-group
            label(for="signupName") username
            input#signupName.form-control(name="user[name]",type="text")
          .form-group
            label(for="signupPassword") password
            input#signupPassword.form-control(name="user[password]",type="text")
        .modal-footer
          button.btn.btn-default(type="button",data-dismiss="modal")close
          button.bt.btn-success(type="submit") submit

#singinModal.modal.fade
.modal-dialog
  .modal-content
    form(method="POST", action="/user/signin")
      .modal-header 登录
      .modal-body
        .form-group
          label(for="signinName") 用户名
          input#signinName.form-control(name="user[name]", type="text")
        .form-group
          label(for="signinPassword") 密码
          input#signinPassword.form-control(name="user[password]", type="text")
      .modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") 关闭
        button.btn.btn-success(type="submit") 提交
